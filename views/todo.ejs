<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/todo.css">
  <title>Todo</title>
</head>
<body>
  <form action="/" method="POST">
    <header>
      <h1>My To Do List</h1>
      <input type="text" id="todo" placeholder="Title..." name="title">
      <textarea name="description" id="description" cols="70" rows="4" placeholder="Description..."></textarea>
      <button id="addTodo">Add</button>
    </header>  
  </form>
  <section id="table">
    <table>
      <thead>
        <tr>
          <th id="titleHead">Title</th>
          <th id="descriptionHead">Description</th>
          <th  id="deleteHead">Delete</th>
        </tr>
      </thead>
    </table>
  </section>
  <ul id="list">
    <%for(let todo of todos){%>
      <li>
        <table>
          <tr>
            <td class="todoAlign" width="500"><%=todo.title%></td>
            <td class="desAlign"><%=todo.description%></td>
            <td>
              <form action="/<%=todo._id%>?_method=DELETE" method="POST" class="close">
                <button class="close">&#215;</button>
              </form>
            </td>
          </tr>
        </table>
      </li>
    <%}%>
  </ul>

  <script src="/js/todo.js"></script>
</body>
</html>